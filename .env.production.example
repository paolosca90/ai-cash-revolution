# EXAMPLE Environment Variables Template
# Copy this to .env.production and fill in your real values

# Production Environment Variables
NODE_ENV=production
VITE_APP_MODE=production

# JWT Configuration - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-jwt-secret-key-here

# Payment Integration (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_PROFESSIONAL_PRICE=price_your_professional_price_here
STRIPE_ENTERPRISE_PRICE=price_your_enterprise_price_here

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@your-domain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Application URLs
APP_URL=https://your-domain.com
API_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# Security
CORS_ORIGIN=https://your-domain.com

# MT5 Configuration
MT5_HOST=your_mt5_host
MT5_PORT=8080
MT5_SERVER=your_mt5_server
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_TERMINAL_PATH=/path/to/terminal64.exe
MT5_PYTHON_ENABLED=true

# Admin Credentials
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=your_secure_admin_password

# Port Configuration
PORT=4000