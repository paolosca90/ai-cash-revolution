{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm ci --prefix backend && npm run build --prefix backend",
    "watchPatterns": [
      "backend/**"
    ]
  },
  "deploy": {
    "startCommand": "npm start --prefix backend",
    "restartPolicyType": "always"
  }
}