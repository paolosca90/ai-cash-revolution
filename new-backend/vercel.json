{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/api/health.ts"
    },
    {
      "src": "/api/user/preferences",
      "dest": "/api/user/preferences.ts"
    },
    {
      "src": "/api/user/mt5-config",
      "dest": "/api/user/mt5-config.ts"
    },
    {
      "src": "/api/analysis/top-signals",
      "dest": "/api/analysis/top-signals.ts"
    },
    {
      "src": "/api/(.*)",
      "status": 404,
      "dest": "/api/not-found.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 15
    }
  }
}