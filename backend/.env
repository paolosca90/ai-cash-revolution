# Production Environment Configuration
# This file contains all necessary environment variables for production deployment

# Server Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://ai-cash-revolution.vercel.app

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database
DB_HOST=your_production_db_host
DB_PORT=5432
DB_NAME=ai_trading_production
DB_USER=your_production_user
DB_PASSWORD=your_production_password

# Security Keys
JWT_SECRET=your-production-jwt-secret-key-64-chars-minimum-security
ENCRYPTION_KEY=your-production-encryption-key-32-chars-exactly
TRADING_ACCOUNT_ENCRYPTION_KEY=your-production-trading-encryption-key-32

# MT5 Trading Configuration
MT5_HOST=your_vps_ip_or_domain
MT5_PORT=8080
MT5_LOGIN=your_mt5_demo_login
MT5_PASSWORD=your_mt5_demo_password
MT5_SERVER=your_mt5_server
MT5_BROKER=your_broker_name

# AI/ML Configuration
GEMINI_API_KEY=your_production_gemini_api_key
OPENAI_API_KEY=your_production_openai_key

# External APIs for Real Market Data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key
TWELVE_DATA_API_KEY=your_twelve_data_key
NEWS_API_KEY=your_news_api_key

# Trading Safety Settings
ENABLE_REAL_TRADING=false
ENABLE_DEMO_MODE=true
DEFAULT_RISK_PERCENTAGE=2
DEFAULT_ACCOUNT_BALANCE=10000
MAX_RISK_PERCENTAGE=10
MAX_DAILY_TRADES=50

# Performance Settings
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ML_ANALYTICS=true
ENABLE_PATTERN_DETECTION=true

# Cache Configuration
REDIS_URL=redis://user:password@host:port
CACHE_EXPIRY_MINUTES=5

# Deployment
VERCEL_URL=your_vercel_deployment_url