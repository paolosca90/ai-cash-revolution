# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Application Configuration
NODE_ENV=production
PORT=3000

# CORS Configuration
